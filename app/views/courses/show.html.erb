<section id="form" class="small-8 small-centered columns">

<fieldset>
  <legend><h3><%= @course.title %></h3></legend>

  <ul>
    <li>
        <strong>Short title:</strong>
        <%= @course.short_title %>
    </li>
    <li>
        <strong>Code:</strong>
        <%= @course.code %>
    </li>
    <li>
        <strong>Number of levels:</strong>
        <%= @course.number_of_levels %>
    </li>
    <li>
          <strong>Category:</strong>
          <%= @course.category %>
    </li>
    <li>
          <strong>Department:</strong>
          <%= @course.department.name %>
    </li>
    <li>
          <strong>School:</strong>
          <%= @course.department.school %>
    </li>
  </ul>

</fieldset>
