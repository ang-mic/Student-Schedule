<%= link_to 'Edit', edit_department_course_path(@department,@course) %>
<%= link_to 'Back', department_courses_path(@department) %> -->

<table>
  <thead>
  <tr>
    <th>Course Modules</th>
  </tr>
    <tr>
      <th>Code</th>
      <th>Title</th>
       <th>Level</th>
      <th>Lecturer</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <%@course.course_modules.each do |course_module| %>
      <tr>
        <td><%= course_module.code %></td>
        <td><%= course_module.title %></td>
        <td><%= course_module.level %></td>
        <td><%= course_module.lecturer %></td>
        <td><%= link_to 'Show |', course_module %>
        <%= link_to 'Edit |', edit_course_module_path(course_module) %>
        <%= link_to 'Destroy', course_module, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
