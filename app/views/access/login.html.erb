
<section id="sign-in-section" class="small-4 small-centered columns">


  <div class="row">
    <div class="small-12 columns">
      <%= form_tag(:action => 'attempt_login') do %>
      <%= label_tag(:username)%>
      <%= text_field_tag(:username)%>
      <%= label_tag(:password)%>
      <%= password_field_tag(:password)%>
      <%= submit_tag("Log in", class: "button signIn") %>
      <% end %>
      <%= link_to "Student login", new_student_session_path  %>
    </div>
  </div>
</section >
