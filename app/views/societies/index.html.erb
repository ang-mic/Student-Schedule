<h1>Listing societies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Email</th>      
    </tr>
  </thead>

  <tbody>
    <% @societies.each do |society| %>
      <tr>
        <td><%= society.name %></td>
        <td><%= society.category %></td>
        <td><%= society.email %></td>   
        <td>
          <%= link_to 'Show', society %>
          <%= link_to 'Edit', edit_society_path(society) %>
          <%= link_to 'Destroy', society, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Society', new_society_path %>